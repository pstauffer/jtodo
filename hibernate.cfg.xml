<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="blubb">
        <property name="hibernate.cglib.use_reflection_optimizer">true</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">blubb</property>
        <property name="hibernate.connection.url">jdbc:mysql://brocode.ch/jtodo</property>
        <property name="hibernate.connection.username">dbajtodo</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <mapping resource="Category.hbm.xml" />
        <mapping resource="Task.hbm.xml" />
        <mapping resource="Reminder.hbm.xml" />
        <mapping resource="Priority.hbm.xml" />
    </session-factory>
</hibernate-configuration>
